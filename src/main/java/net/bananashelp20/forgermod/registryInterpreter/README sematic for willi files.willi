#//RECIPES
{smelting
    category
    outputItem
    smelting, properties #// as in code
    [
        possibleInputItems
    ]
}

{blasting
    category
    outputItem
    blasting, properties #// as in code
    [
        possibleInputItems
    ]
}

{both
    category
    outputItem
    smelting, properties #// as in code
    blasting, properties #// as in code
    [
        possibleInputItems
    ]
}

{shaped
    category
    patternRow1
    patternRow2 #// with X meaning nothing
    patternRow3
    meaning1 -> meaningItem1
    meaning2 -> meaningItem2
    meaningN -> meaningItemN
    unlockedByItem
    resultItem
}

{shapeless
    category
    unlockedByItem
    resultItem
    amount
    [
        neededItems
    ]
}

{custom
    CraftingBlockEntityClass
    [
        possibleInputItems
    ]
    [
        possibleOutputItems
    ]
}

{conversion
    category
    item <-> block #// auch -> und <- sind möglich für einseitige conversion
}

#//TOOL TIERS
{normal
    ingredientItem
    materialName
    materialProperties #//as in code
}

#//BLOCKS
{simple
    blockName
    blockProperties #//as in code
    dropMethod
    ?dropOtherItemItem #//only if dropMethod equals dropOther
    modelingmethod
    breakTool
    material
    creativeTab
}
{special
    blockName
    createMethod
    blockProperties
    dropMethod
    ?dropOtherItemItem #//only if dropMethod equals dropOther
    blockWithItem
    breakTool
    material
    creativeTab
}
{complex
    blockName
    new BlockClass(blockProperties)
    dropMethod
    ?dropOtherItemItem #//only if dropMethod equals dropOther
    !NO_MODEL
    breakTool
    material
    creativeTab
}

