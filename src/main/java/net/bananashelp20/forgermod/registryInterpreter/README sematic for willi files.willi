#//ITEMS
{simpleItem
    itemName
    modelingmethod
    creativeTab
    ?[E #//enchantments alias tags are optional
        Enchantable:Sword #//soon without "Enchantable:"
        Enchantable:Axe
        Enchantable:Pickaxe
    ?]
}

{specialItem
    itemName
    modelingmethod
    creativeTab
    ?[E
        Enchantable:Sword
        Enchantable:Axe
        Enchantable:Pickaxe
    ?]
}

{specialItem
    itemName
    modelingmethod
    ?rarity
    creativeTab
    ?[E
        Enchantable:Sword
        Enchantable:Axe
        Enchantable:Pickaxe
    ?]
}

{simpleSword
    swordName
    sword, properties #//as in code
    createMethod
    modelingmethod
    material
    creativeTab
    ?[E
        Enchantable:Axe
    ?]
}

{specialSword
    swordName
    sword, properties
    createMethod
    modelingmethod
    material
    creativeTab
    [ #//Specify brackets for createMethod
        e.g. rarity
    ]
    !NO_ENCHANTS #//no enchantments (or tags)
}

{specialSword
    swordName
    sword, properties
    createMethod
    modelingmethod
    material
    ?rarity #//currently strange sematic #gottafixthat
    creativeTab
    [ #//Specify brackets
        e.g. rarity
    ]
    ?[E
        Enchantable:Axe
        Enchantable:Pickaxe
    ?]
}

{upgradableSword
    baseSwordName
    WeaponClass
    createMethod
    modelingmethod
    material
    [
        variations #//(e.g. !ALL, or just a list from used variations)
        !ALL #//! declares a command, and ALL means all variations
    ]        #//instead of !ALL, there could be the following:
    #//[
    #//   none,
    #//   amber_gemstone,
    #//   ruby_gemstone
    #//]
    creativeTab
    !NO_ENCHANTS
}

